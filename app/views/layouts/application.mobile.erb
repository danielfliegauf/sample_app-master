<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	
	<meta name="viewport" content="width=device-width, initial-scale=1.5, maximum-scale=1.0, user-scalable=no">
	 
	  <%= stylesheet_link_tag "symbol_font", media: "all" %>
	  <%= stylesheet_link_tag "mobiletwo", media: "all" %>
	 
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
	

	 <%= javascript_include_tag "application" %>
	<script src="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js"></script>
	
	<script type="text/javascript" src="https://maps-api-ssl.google.com/maps/api/js?v=3&sensor=false"></script>
	


	<%= csrf_meta_tags %>
	<%= render 'layouts/shim' %></head>
<body>


	<div data-role="page">

		<div data-role="header" data-position="fixed" data-transition="none">
			<%= full_title(yield(:title)) %>
			<% unless request.user_agent =~ /android|Android|bada/ %>
			<div data-role="navbar">
				<ul>
					<li><a href="<%= about_path(:mobile => 1) %>" id="options" data-ajax="false"><symbol class="lsf-icon" title="menu" style="font-size: 130%; color: #FFF; margin-right: -7px;text-shadow: 0px 0px 0px;"></symbol>
					<li><a href="<%= root_path %>" id="options" data-ajax="false"><symbol class="lsf-icon" title="tilemenu" style="font-size: 130%; color: #FFF; margin-right: -7px;text-shadow: 0px 0px 0px;"></symbol></a></li>
					<li><a href="<%= users_path %>" id="options" data-ajax="false"><symbol class="lsf-icon" title="users" style="font-size: 130%; color: #FFF; margin-right: -7px;text-shadow: 0px 0px 0px;"></symbol></a></li>
					<li><a href="<%= search_path(:mobile => 1) %>" id="options" data-ajax="false"><symbol class="lsf-icon" title="search" style="font-size: 130%; color: #FFF; margin-right: -7px;text-shadow: 0px 0px 0px;"></symbol></a></li>
					<li><a href="<%= write_path(:mobile => 1) %>" id="options" data-ajax="false"><symbol class="lsf-icon" title="write" style="font-size: 130%; color: #FFF; margin-right: -7px;text-shadow: 0px 0px 0px;"></symbol></a></li>
				</ul>
			</div><!-- /navbar -->
		<% else %>
			<!-- Navbar with Pictures instead of Webfonts -->
			<div data-role="navbar">
				<ul>
					<li><a href="<%= about_path(:mobile => 1) %>" id="options" data-ajax="false">
						<%= image_tag("options2.png", alt: "Write", width: "50%") %>
					</a></li>
					<li><a href="<%= root_path %>" id="options" data-ajax="false">
						<%= image_tag("tilemenu2.png", alt: "Write", width: "50%") %>
					</a></li>
					<li><a href="<%= users_path %>" id="options" data-ajax="false">
						<%= image_tag("users2.png", alt: "Write", width: "50%") %>
					</a></li>
					<li><a href="<%= search_path(:mobile => 1) %>" id="options" data-ajax="false">
						<%= image_tag("search2.png", alt: "Write", width: "50%") %>
					</a></li>
					<li><a href="<%= write_path(:mobile => 1) %>" id="options" data-ajax="false">
						<img src='/assets/uk.png' width="50%" />
					</a></li>
				</ul>
			</div><!-- /navbar -->
		<% end %>
		</div><!-- /header -->

	<div data-role="content">	

		<%= yield %>
	

	</div><!-- /content -->

</div><!-- /page -->
	
<% if mobile_device? %>
	    	<%= link_to "Full Site", root_url(:mobile => 0), :class => "btn-small", :'data-ajax' => "false", :rel => "external" %>
	  	<% else %>
	    	<%= link_to "Mobile Site", :mobile => 1, :class => "btn-small", :'data-ajax' => "false" %>
	  	<% end %>

</body>
</html>

<script> 
	if (!!window.CSSFontFaceRule){
		
	}else{
		document.getElementById("options").innerHTML = "<img src='/assets/uk.png' />";
		
	} 
</script>