<li id="<%= micropost.id %>">
	<%= link_to gravatar_for(micropost.user), micropost.user %>
	<span class="user">
		<%= link_to micropost.user.name, micropost.user %>
	</span>
	<span class="hobbyplace"><%= micropost.hobby %> in <%= micropost.place %> at <%= micropost.datetime.hour %>:<%= micropost.datetime.min %></span>
	<span class="content"><%= micropost.content %></span>
	<span class="content"><%= micropost.weekly %></span>
	<span class="timestamp">
		Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	</span>
	<% unless current_user?(micropost.user) %>
		<%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, title: micropost.content %>
	<% else %>
	<div id="follow_form2">
		<% if current_user.remembering?(@micropost) %>
			<%= render 'mindposts/unfollow' %>
		<% else %>
			<%= render 'mindposts/follow' %>
		<% end %>
	</div>
<% end %>
</li>