<%provide(:title, @user.name) %>
<% if signed_in? %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 110 %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</scetion>
		<% unless current_user?(@user) %>
		<section>
			<%= link_to "write #{ @user.name } on Facebook", "https://facebook.com/messages/#{@user.uid}", :target => '_blank' %>
		</section>
		<% end %>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
	</div>
	<div class="span8">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ul class="microposts" data-role="listview">
				<%= render @microposts %>
			</ul>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
</div>

<% else %>
<div class="center hero-unit">
<h1>Connectify</h1>
<p>
	... a great place to <b>find people</b> doing the things you love most, too!
  
</p>It's just one click away... <br/><br />
<%= link_to "Connect me!", "/auth/facebook", :'data-role' => 'button', :'data-corners' => 'false', :'data-shadow' => 'false' %>
</div>
<% end %>